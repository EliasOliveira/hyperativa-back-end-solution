<?xml version="1.0" encoding="UTF-8"?>
<beanio xmlns="http://www.beanio.org/2012/03"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.beanio.org/2012/03 http://www.beanio.org/2012/03/mapping.xsd">

    <stream name="cardStream" format="fixedlength" strict="false">

        <record name="header" class="com.example.hyperativa_back_end.dtos.beanio.HeaderRecord">
            <field name="name" length="29" />
            <field name="date" length="8" />
            <field name="batch" length="8" />
            <field name="recordCount" length="6" />
        </record>

        <record name="card" class="com.example.hyperativa_back_end.dtos.beanio.CardRecord">
            <field name="identifier" length="2" />
            <field name="lotNumber" length="5" />
            <field name="cardNumber" length="19" />
        </record>

        <record name="footer" class="com.example.hyperativa_back_end.dtos.beanio.FooterRecord">
            <field name="batch" length="8" />
            <field name="recordCount" length="6" />
        </record>

    </stream>

</beanio>